@model Framework.Models.Account

    <link rel="stylesheet" href="/css/Account.css">
    
        <section class="col-12 col-sm-6 col-md-3">
            <form class="form-container " method="post" asp-action="Index">
                @if (string.IsNullOrEmpty(ViewBag.LTLD))
                {
                    <p class="text-muted">Welcome to our website</p>
                }
                else
                {
                    <p class="text-muted">Hi, you were last logged in on our system on @ViewBag.LTLD</p>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group ">
                    <label asp-for="USERNAME">Email address</label>
                    <input type="email" class="form-control " asp-for="USERNAME" placeholder="Enter email">
                    <span asp-validation-for="USERNAME" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="PASSWD">Password</label>
                    <input type="password" class="form-control" asp-for="PASSWD" placeholder="Password">
                    <span asp-validation-for="PASSWD" class="text-danger"></span>
                </div>
                <h4 style="color:red">@ViewBag.Message</h4>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </section>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
